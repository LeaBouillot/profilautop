{% extends 'base.html.twig' %}

{% block title %}Détails de l'offre d'emploi{% endblock %}

{% block body %}
<div class="container px-4 py-8 mx-auto">
    <h1 class="mb-6 text-3xl font-bold">{{ job_offer.title }}</h1>

    <div class="p-6 bg-white rounded-lg shadow-md">
        <p class="mb-2 text-gray-600"><strong>Entreprise:</strong> {{ job_offer.company }}</p>
        <p class="mb-2 text-gray-600"><strong>Lieu:</strong> {{ job_offer.location }}</p>
        <p class="mb-2 text-gray-600"><strong>Salaire:</strong> {{ job_offer.salary }}</p>
        <p class="mb-2 text-gray-600"><strong>Contact:</strong> {{ job_offer.contactPerson }}</p>
        <p class="mb-2 text-gray-600"><strong>Email:</strong> {{ job_offer.contactEmail }}</p>
        <p class="mb-2 text-gray-600"><strong>Date limite:</strong> {{ job_offer.applicationDate|date('d/m/Y') }}</p>
        <p class="mb-2 text-gray-600"><strong>Statut:</strong> {{ job_offer.status }}</p>
    </div>

    <div class="flex mt-6 space-x-4">
        <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}" class="px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-600">Modifier</a>
        <a href="{{ path('app_job_offer_list') }}" class="px-4 py-2 text-gray-700 bg-gray-300 rounded hover:bg-gray-400">Retour à la liste</a>
        
        <form method="post" action="{{ path('app_job_offer_delete', {'id': job_offer.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job_offer.id) }}">
            <button class="px-4 py-2 text-white bg-red-500 rounded hover:bg-red-600">Supprimer</button>
        </form>
    </div>
</div>
{% endblock %}